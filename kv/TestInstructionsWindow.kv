
<TestInstructionsWindow>:
    id: test_instructions
    name: "test_instructions"
    FloatLayout:

        Image:
            source: 'graphics/PerioLogo.png'
            size_hint: .3, .2
            pos_hint: {"center_x": .5, "top": 1}

        MDLabel:
            text: "Instructions"
            theme_text_color: "Primary"
            font_style: "H5"
            size_hint_y: None
            height: self.texture_size[1]
            pos_hint: {"center_x": .55, "center_y": .75}

        ScrollView:
            size_hint: .8, .5
            pos_hint: {"center_x": .5, "center_y": .45}

            MDLabel:
                text: root.instructions_text
                theme_text_color: "Secondary"
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                halign: "left"

        MDRaisedButton:
            text: "Back"
            pos_hint: {'center_x': 0.5, 'y': .05}
            size_hint: (.8, .1)
            on_release:
                app.change_screen("main_menu")
                root.manager.transition.direction = "right"