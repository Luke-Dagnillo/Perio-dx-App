
<MainMenuWindow>:
    id: main_menu
    name:"main_menu"
    canvas.before:
        Color:
            rgba: 255/255, 255/255, 255/255, 1 # A white color for the background
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:

        Image:
            source: 'graphics/PerioLogo.png'
            size_hint: None, None
            size_hint: .45, .5
            pos_hint: {"center_x": .5, "y":.55} 

        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            spacing: dp(10)  # Add some spacing between rows if needed

            MDFillRoundFlatButton:
                id: "take__test" 
                text: "Begin a Test"
                font_size: sp(30)
                bold: True 
                md_bg_color: 130/255, 209/255, 217/255, 1 # Teal Button
                text_color: 0, 0, 0, 1  # Black Text
                pos_hint: {'center_x': .5,'y': .35}
                size_hint: (.8,.1)
                on_release: 
                    app.change_screen("camera_window")
                    root.manager.transition.direction = "left"

            MDFillRoundFlatButton:
                id: "test_instructions_button"
                text: "View Test Instructions"
                font_size: sp(30)
                bold: True
                md_bg_color: 130/255, 209/255, 217/255, 1 # Teal Button
                text_color: 0, 0, 0, 1  # Black Text
                pos_hint: {'center_x': .5,'y': .25}
                size_hint: (.8,.1)
                on_release: 
                    app.change_screen("test_instructions") 
                    root.manager.transition.direction = "left"

            MDFillRoundFlatButton:
                id: "view_results_button"
                text: "View Test Results"
                font_size: sp(30)
                bold: True
                md_bg_color: 130/255, 209/255, 217/255, 1 # Teal Button
                text_color: 0, 0, 0, 1  # Black Text
                pos_hint: {'center_x': .5,'y': .15}
                size_hint: (.8,.1) 
                on_release: 
                    app.change_screen('test_history_window')
                    root.manager.transition.direction = "up"       
                    app.populate_test_history()
        
            MDFillRoundFlatButton:
                id: "log_out_button"
                text: "Log Out"
                font_size: sp(30)
                bold: True
                md_bg_color: 200/255, 69/255, 5/255, 1 # red button
                text_color: 0, 0, 0, 1  # Black Text
                pos_hint: {'center_x': .5,'y': .05}
                size_hint: (.8,.1) 
                on_release: 
                    app.change_screen("login_screen")
                    root.manager.transition.direction = "right"
